    <%= f.label :申请时间 %><br>
    <%= Time.now.strftime("%Y-%m-%d")%>
  </div>
  <div class="field">
    <%= f.label :申请人 %><br>
    <%= @current_user.name%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
